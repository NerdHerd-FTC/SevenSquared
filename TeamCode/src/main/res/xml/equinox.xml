<Robot type="FirstInspires-FTC">
    <!-- C920 camera on left -->
    <Webcam name="leftCamera" serialNumber="7B2F4FD0" />

    <!-- Control Hub #1 -->

    <!-- Need to figure out serial number, parent module address -->
    <LynxUsbDevice name="Control Hub" serialNumber="(embedded)" parentModuleAddress="173">
        <LynxModule name="Main Hub" port="173">
            <!-- Old Control Hubs Use this IMU -->
            <!-- <LynxEmbeddedIMU name="imu" port="0" bus="0" /> -->

            <!-- New Control Hubs use this IMU -->
            <ControlHubImuBHI260AP name="imu"   port="0" bus="0" />

            <goBilda5201SeriesMotor name="frontLeft"   port="0" /> <!--   -->
            <goBilda5201SeriesMotor name="backLeft"    port="1" /> <!--  -->
            <goBilda5201SeriesMotor name="frontRight"  port="2" /> <!-- -->
            <goBilda5201SeriesMotor name="backRight"   port="3" /> <!-- -->

            <RevColorSensorV3 name="colorV3" port="0"/>
            <RevColorSensorV3 name="topColor" port="1"/>
            <RevColorSensorV3 name="bottomColor" port="2"/>

            <Servo name="CSR"   port="0" />  <!--  -->
            <Servo name="CSL"   port="1" />  <!--  -->

            <ContinuousRotationServo name="DS"         port="2" /> <!-- Green -->
            <ContinuousRotationServo name="DC"         port="3" /> <!-- Blue -->

        </LynxModule>

        <LynxModule name="Expansion Hub DQ2ATDI3" port="4">

            <goBilda5201SeriesMotor name="joint"       port="0" /> <!--  -->
            <goBilda5201SeriesMotor name="arm"       port="1" /> <!--  -->

        </LynxModule>
    </LynxUsbDevice>
</Robot>